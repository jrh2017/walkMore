/* pages/logistics/index.wxss */
@import '../../css/common.wxss';

.header {
  width: calc(100% - 60rpx);
  height: 270rpx;
  background: #fff;
  margin-top: 20rpx;
  box-shadow: 0px 6rpx 10rpx 0px rgba(71, 167, 254, 0.1);
}

.dis {
  width: 630rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #e4e6ed;
  padding: 34rpx 0 26rpx 0;
}

.display {
  display: flex;
  align-items: center;
}

.tit {
  color: #333;
  font-size: 32rpx;
}

.xian {
  width: 6rpx;
  height: 30rpx;
  background: #fbe64d;
  border-radius: 3rpx;
  margin-right: 20rpx;
}

.state {
  color: #47a7fe;
  font-size: 28rpx;
}

.font {
  color: #333;
  font-size: 28rpx;
}

.mg {
  margin: 30rpx 0 0 30rpx;
}

.mf {
  margin: 0 20rpx;
}

.content {
  width: calc(100% - 60rpx);
  height: auto;
  background: #fff;
  margin: 10rpx 0 90rpx 0;
  box-shadow: 0px 6rpx 10rpx 0px rgba(71, 167, 254, 0.1);
  position: relative;
  padding-bottom:40rpx;
}
.fllow{
  width:630rpx;
  border-bottom:1rpx solid #E4E6ED;
  margin-left:30rpx;
  padding:40rpx 0 30rpx 0;
}
.detail{
  width:630rpx;
  margin:30rpx 0 0 30rpx;
}
.line{
  width:1rpx;
  height:146rpx;
  background:#E6E6E6;
  position: absolute;
  left:40rpx;
  top:169rpx;
}

.concrete{
  width:584rpx;
  margin:12rpx 0 0 44rpx;
  min-height:76rpx;
}

.time{
  color:#999;
  font-size: 28rpx;
  margin-left:20rpx;
}
.round{
  width:24rpx;
  height:24rpx;
  border-radius: 50%;
  background:#CCC;
  z-index: 10;
}

.cor{
  background:#fbe64d;
}
