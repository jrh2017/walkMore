<!--pages/index/index.wxml-->
<view class='container'>
  <view class='header'>
    <view class='dis'>
      <button class='btnAnalysis' plain='true' open-type="getUserInfo" bindgetuserinfo="goHeat">
        <view class='rlb cor'>
          <image src='../../imgs/rb.png' class='rb'></image>
          <text>{{money}}</text>
        </view>
      </button>
      <button class='btnAnalysis sos' plain='true' open-type="getUserInfo" bindgetuserinfo="analysis">
        <view class='diss' style='margin-left:22rpx'>
          <image src='../../imgs/jkcp.png' class='jkcp'></image>
          <view class='cor size analysis'>健康测评</view>
        </view>
        <image src='../../imgs/look.png' class='look' wx:if="{{look}}"></image>
      </button>
    </view>
    <view class='fg'>
      <button class='btnAnalysis qd abs' plain='true' open-type="getUserInfo" bindgetuserinfo="lingqu">
        <image src='../../imgs/qd.png' class='qd'></image>
      </button>
      <image src='../../imgs/main.png' class='main abs'></image>
      <view class='useStep abs size cor'>可兑换步数</view>
      <view class='num abs cor'>{{step}}</view>
      <view class='clear abs size'>每日24点清零</view>
    </view>
    <button open-type="getUserInfo" bindgetuserinfo="exchange" plain='true' class='btnClick clickDh primary'>点击兑换热力币</button>
    <button class='btnAnalysis sign' plain='true' open-type="getUserInfo" bindgetuserinfo="goSign">
      <view class='signIn'>签到</view>
    </button>
    <view class='yq cor'>每邀请一位新用户即可获赠5枚热力币</view>
    <view class='xian'></view>
    <view class='friend'>
      <block wx:if="{{friendArr[0]}}">
        <image class='friAvatar' src='{{friendArr[0]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[1]}}">
        <image class='friAvatar' src='{{friendArr[1]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[2]}}">
        <image class='friAvatar' src='{{friendArr[2]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[3]}}">
        <image class='friAvatar' src='{{friendArr[3]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <view class='share' wx:if="{{openid}}">
        <button open-type='share' plain='true' class='share'>
          <image src='../../imgs/jia.png' class='friAvatar'></image>
        </button>
      </view>
      <view class='share' wx:else>
        <button open-type='getUserInfo' plain='true' class='share' bindgetuserinfo="authorizeNow">
          <image src='../../imgs/jia.png' class='friAvatar'></image>
        </button>
      </view>
    </view>
    <view class='more' wx:if='{{friendArr.length>=5}}' bindtap='lookFriend'>查看更多好友</view>
  </view>
  <view class='detail'>
    <view class='wares cor'>
      <text class='xx'></text> 商品兑换
    </view>
    <view wx:for="{{wares}}" wx:key="{{index}}" data-index="{{index}}">
      <view class='wareDetail'>
        <image src='../../imgs/cpu.png' class='goods' catchtap='onDetail'></image>
        <view style='margin:32rpx 0 0 30rpx;'>
          <view class='size cor' catchtap='onDetail'>{{detail.intro}}</view>
          <view class='only' catchtap='onDetail'>剩余{{detail.only}}件</view>
          <view style='padding:45rpx 0 20rpx 0;' catchtap='onDetail'>
            <image src='../../imgs/rb.png' class='rb'></image>
            <text class='price'>{{detail.price}}</text>
            <text class='yprice'>原价￥{{detail.yprice}}</text>
          </view>
          <block wx:if="{{isChange==1}}">
            <button class='change cor size' plain='true' open-type="getUserInfo" bindgetuserinfo="goChange">兑换</button>
          </block>
          <block wx:if="{{isChange==2}}">
            <view class='change cor size ischange'>已兑换</view>
          </block>
        </view>
      </view>
    </view>
    <view class="dialog" hidden="{{noEnough}}" catchtouchmove="ture">
      <view class="mask" bindtap='hideHandle'></view>
      <view class="condition">
        <view class='title'>
          <image src='../../imgs/title.png' class='title'></image>
          <view class='abs cor tit'>热力币不足</view>
        </view>
        <view class='disDia'>
          <view>
            <image src='../../imgs/cpu.png' class='comm'></image>
          </view>
          <view style='margin-top:50rpx;'>
            <view class='introDialog cor'>{{detail.intro}}</view>
            <view style='margin-top:90rpx;'>
              <image src='../../imgs/rb.png' class='rb'></image>
              <text class='price'>{{detail.price}}</text>
            </view>
          </view>
        </view>
        <view class='dis myRlb'>
          <view class='cor introDialog'>我的热力币</view>
          <view>
            <image src='../../imgs/rb.png' class='rb'></image>
            <text class='cor size'>{{money}}</text>
          </view>
        </view>
        <view>
          <button open-type='share' class='btnYq cor'>邀请好友赚取热力币</button>
        </view>
      </view>
      <image src='../../imgs/delete.png' class='delete' bindtap='hideHandle'></image>
    </view>
    <view class="dialog" hidden="{{result}}" catchtouchmove="ture">
      <view class="mask" bindtap='hideHandle'></view>
      <view class="condition">
        <view class='title'>
          <image src='../../imgs/title.png' class='title'></image>
          <view class='abs cor tit'>测量结果</view>
        </view>
        <view class='cljg'>
          <view class='relati'>
            <view class='ding'>
              <view class='diss'>
                <view class='duan'></view>
                <view class='cor size'>体重</view>
              </view>
              <view class='kg'>500kg</view>
            </view>
            <image src='../../imgs/weightBg.png' class='ka'></image>
          </view>
          <view class='relati'>
            <view class='ding'>
              <view class='diss'>
                <view class='duan'></view>
                <view class='cor size'>身高</view>
              </view>
              <view class='kg'>190cm</view>
            </view>
            <image src='../../imgs/heightBg.png' class='ka'></image>
          </view>
          <view class='btnYq cor ws' bindtap='wsMessage'>完善信息查看健康测评</view>
        </view>
      </view>
      <image src='../../imgs/delete.png' class='delete wsde' bindtap='hideHandle'></image>
    </view>
    <view class="dialog" hidden="{{perMessage}}" catchtouchmove="ture">
      <view class="mask" bindtap='hideHandle'></view>
      <view class="condition">
        <view class='title'>
          <image src='../../imgs/title.png' class='title'></image>
          <view class='abs cor tit'>完善信息</view>
        </view>
        <form style='width:100%;' bindsubmit='wsResult'>
          <view class='cljg'>
            <view class='relati'>
              <view class='ding'>
                <view class='diss'>
                  <view class='duan'></view>
                  <view class='cor size'>体重</view>
                </view>
                <block wx:if="{{false}}">
                  <view class='kg'>500kg</view>
                </block>
                <block wx:else>
                  <view>
                    <input class='kg' name='weight' placeholder='请输入你的体重' placeholder-class='place' />
                  </view>
                </block>
              </view>
              <image src='../../imgs/weightBg.png' class='ka'></image>
            </view>
            <view class='relati'>
              <view class='ding'>
                <view class='diss'>
                  <view class='duan'></view>
                  <view class='cor size'>身高</view>
                </view>
                <block wx:if="{{false}}">
                  <view class='kg'>190cm</view>
                </block>
                <block wx:else>
                  <view>
                    <input class='kg' name='height' placeholder='请输入你的身高' placeholder-class='place' />
                  </view>
                </block>
              </view>
              <image src='../../imgs/heightBg.png' class='ka'></image>
            </view>
            <view class='relati'>
              <view class='ding'>
                <view class='diss'>
                  <view class='duan'></view>
                  <view class='cor size'>性别</view>
                </view>
                <view>
                  <input class='kg' name='gender' placeholder='请输入你的性别' placeholder-class='place' />
                </view>
              </view>
              <image src='../../imgs/genderBg.png' class='ka'></image>
            </view>
            <view class='relati'>
              <view class='ding'>
                <view class='diss'>
                  <view class='duan'></view>
                  <view class='cor size'>年龄</view>
                </view>
                <view>
                  <input class='kg' name='age' placeholder='请输入你的年龄' placeholder-class='place' />
                </view>
              </view>
              <image src='../../imgs/ageBg.png' class='ka'></image>
            </view>
            <button class='btnYq cor ckjk' plain='true' form-type="submit">查看健康测评</button>
          </view>
        </form>
      </view>
      <image src='../../imgs/delete.png' class='delete jkcp' bindtap='hideHandle'></image>
    </view>
    <view class="dialog" hidden="{{register}}" catchtouchmove="ture">
      <view class="mask" bindtap='hideHandle'></view>
      <view class="condition wg">
        <view class='qdHead'>
          <image src='../../imgs/qdBg.png' class='qdBg'></image>
          <view class='money'>3</view>
        </view>
        <view class='footer'>
          <view class='week'>
            <view wx:for="{{week}}" wx:key="{{index}}" data-index="{{index}}">
              <view class='size days'>{{item}}</view>
              <view class='jiabi'>
                <image src='../../imgs/rbig.png' class='rbig'></image>
                <view class='days jia'>+1</view>
              </view>
            </view>
          </view>
          <view class='qdqd' bindtap='hideHandle'>确定</view>
          <view class='dbsm'>以周为周期，累计签到奖励币数为当周签到天数</view>
        </view>
      </view>
    </view>
    <view class='noMore'>
      <text class='line'></text>
      <text class='none'>没有更多了</text>
      <text class='line'></text>
    </view>
  </view>
</view>