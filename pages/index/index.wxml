<!--pages/index/index.wxml-->
<view class='container'>
  <view class='header'>
    <view class='dis'>
      <button class='btnAnalysis' plain='true' open-type="getUserInfo" bindgetuserinfo="goHeat">
        <view class='rlb cor'>
          <image src='../../imgs/rb.png' class='rb'></image>
          <text>{{money}}</text>
        </view>
      </button>
      <button class='btnAnalysis' plain='true' open-type="getUserInfo" bindgetuserinfo="analysis">
        <view class='analysis size'>健康测评</view>
      </button>
    </view>
    <view class='fg'>
      <button class='btnAnalysis qd abs' plain='true' open-type="getUserInfo" bindgetuserinfo="goSign">
        <image src='../../imgs/qd.png' class='qd'></image>
      </button>
      <image src='../../imgs/main.png' class='main abs'></image>
      <view class='useStep abs size cor'>可兑换步数</view>
      <view class='num abs cor'>{{step}}</view>
      <view class='clear abs size'>每日24点清零</view>
    </view>
    <button open-type="getUserInfo" bindgetuserinfo="exchange" plain='true' class='btnClick clickDh cor'>点击兑换热力币</button>
    <view class='yq cor'>每邀请一位新用户即可获赠5枚热力币</view>
    <view class='xian'></view>
    <view class='friend'>
      <block wx:if="{{friendArr[0]}}">
        <image class='friAvatar' src='{{friendArr[0]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[1]}}">
        <image class='friAvatar' src='{{friendArr[1]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[2]}}">
        <image class='friAvatar' src='{{friendArr[2]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <block wx:if="{{friendArr[3]}}">
        <image class='friAvatar' src='{{friendArr[3]}}'></image>
      </block>
      <block wx:else>
        <view class='friAvatar'></view>
      </block>
      <view class='share'>
        <button open-type='share' plain='true' class='share'>
          <image src='../../imgs/jia.png' class='friAvatar'></image>
        </button>
      </view>
    </view>
    <view class='more' wx:if='{{friendArr.length>=4}}' bindtap='lookFriend'>查看更多好友</view>
  </view>
  <view class='detail'>
    <view class='wares cor'>
      <text class='xx'></text> 商品兑换
    </view>
    <label wx:for="{{wares}}" wx:key="{{index}}" data-index="{{index}}">
      <view class='wareDetail'>
        <button class='goods btnDetail' plain='true' open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">
          <image src='../../imgs/cpu.png' class='goods'></image>
        </button>
        <view style='margin:32rpx 0 0 30rpx;'>
          <view class='size cor'>{{detail.intro}}</view>
          <view class='only'>剩余{{detail.only}}件</view>
          <view style='margin-top:45rpx;'>
            <image src='../../imgs/rb.png' class='rb'></image>
            <text class='price'>{{detail.price}}</text>
            <text class='yprice'>原价￥{{detail.yprice}}</text>
          </view>
          <block wx:if="{{isChange==1}}">
            <view class='change cor size' catchtap='goChange'>兑换</view>
          </block>
          <block wx:if="{{isChange==2}}">
            <view class='change cor size ischange'>已兑换</view>
          </block>
        </view>
      </view>

    </label>
    <view class="dialog" hidden="{{noEnough}}">
      <view class="mask"></view>
      <view class="condition">
        <view class='title'>
          <image src='../../imgs/title.png' class='title'></image>
          <view class='abs cor tit'>热力币不足</view>
        </view>
        <view class='disDia'>
          <view>
            <image src='../../imgs/cpu.png' class='comm'></image>
          </view>
          <view style='margin-top:50rpx;'>
            <view class='introDialog cor'>{{detail.intro}}</view>
            <view style='margin-top:90rpx;'>
              <image src='../../imgs/rb.png' class='rb'></image>
              <text class='price'>{{detail.price}}</text>
            </view>
          </view>
        </view>
        <view class='dis myRlb'>
          <view class='cor introDialog'>我的热力币</view>
          <view>
            <image src='../../imgs/rb.png' class='rb'></image>
            <text class='cor size'>{{money}}</text>
          </view>
        </view>
        <view>
          <button open-type='share' class='btnYq cor'>邀请好友赚取热力币</button>
        </view>
      </view>
      <image src='../../imgs/delete.png' class='delete' bindtap='hideHandle'></image>
    </view>
    <view class="dialog" hidden="{{enough}}">
      <view class="mask"></view>
      <view class="condition">
        <view class='title'>
          <image src='../../imgs/title.png' class='title'></image>
          <view class='abs cor tit'>确认兑换商品</view>
        </view>
        <view class='disDia'>
          <view>
            <image src='../../imgs/cpu.png' class='comm'></image>
          </view>
          <view style='margin-top:50rpx;'>
            <view class='introDialog cor'>{{detail.intro}}</view>
            <view style='margin-top:50rpx;'>
              <view class='yprice pdd'>原价￥{{detail.yprice}}</view>
              <image src='../../imgs/rb.png' class='rb'></image>
              <text class='price'>{{detail.price}}</text>
            </view>
          </view>
        </view>
        <view class='myRlb qrpd'>
          <block wx:if="{{haveAdd}}">
            <view class='dis mg'>
              <view>
                <image src='../../imgs/name.png' class='icon'></image>
                <text class='pos cor size'>{{userInfo.name}}</text>
              </view>
              <view>
                <image src='../../imgs/phone.png' class='icon'></image>
                <text class='pos cor size'>{{userInfo.phone}}</text>
              </view>
            </view>
            <view>
              <image src='../../imgs/add.png' class='icon pos add'></image>
              <text class='adds cor size'>{{userInfo.add}}</text>
            </view>
          </block>
          <block wx:else>
            <view class='noAdd size' bindtap='goAdd'>您还没有填写收货地址，请点击填写</view>
          </block>
        </view>
        <view>
          <button class='btnYq qr cor' bindtap='confirm'>确认</button>
        </view>
      </view>
      <block wx:if="{{haveAdd}}">
        <image src='../../imgs/delete.png' class='delete qrdel' bindtap='hideHandle'></image>
      </block>
      <block wx:else>
        <image src='../../imgs/delete.png' class='delete noaddDel' bindtap='hideHandle'></image>
      </block>
    </view>
    <view class="dialog" hidden="{{authorize}}">
      <view class="mask"></view>
      <view class="condition conWidth">
        <image src='../../imgs/shou.png'class='shou'></image>
        <view class='need cor size'>需要授权才能查看称重结果</view>
        <button class='authorizeBtn cor' plain='true' open-type="getUserInfo" bindgetuserinfo="authorizeNow">立即授权</button>
      </view>
      <image src='../../imgs/delete.png' class='delete qrdel' bindtap='hideHandle'></image>
    </view>
    <view class='noMore'>
      <text class='line'></text>
      <text class='none'>没有更多了</text>
      <text class='line'></text>
    </view>
  </view>
</view>