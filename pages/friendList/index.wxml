<!--pages/friendList/index.wxml-->
<view class='container'>
  <view class='friendList'>
    <view class='dis' wx:for="{{friendList}}" wx:key="{{index}}">
      <view>
        <view class='xian'></view>
        <view class='round'></view>
        <view class='xian'></view>
      </view>
      <view class='dis intro {{index===friendList.length-1?"lastOne":""}}'>
        <image src='../../imgs/ava.jpg' class='avatar'></image>
        <view class='nickname'>王总监</view>
      </view>
    </view>
  </view>
  <button open-type='share' class='btn' plain='true'>邀请更多好友</button>
</view>